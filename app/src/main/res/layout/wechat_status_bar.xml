<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#eee"
              android:layout_height="40dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp">
        <LinearLayout
                android:id="@+id/id_ll_chat_wapper"
                android:gravity="center"
                android:layout_width="3dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/id_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#008000"
                    android:text="聊天"
                    />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/id_ll_discover_wapper"
                android:gravity="center"
                android:layout_width="3dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/id_discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    android:text="发现"
                    />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/id_ll_contacts_wapper"
                android:gravity="center"
                android:layout_width="3dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/id_constants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    android:text="通讯录"
                    />
        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/id_tabline"
            android:layout_width="130dp"
            android:layout_height="3dp"
            android:background="@drawable/tab_line"
            />


</LinearLayout>